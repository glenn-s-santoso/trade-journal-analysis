# Bybit API credentials
# Copy this file to .env and fill in your actual API credentials
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=false

# SSL Verification - set to true to disable SSL verification if you encounter SSL errors
# WARNING: Only use for testing purposes as it reduces security
DISABLE_SSL_VERIFY=true

# OpenRouter API credentials for LLM analysis
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=x-ai/grok-4-fast:free

# Google API credentials
# Create OAuth 2.0 credentials at https://console.cloud.google.com/apis/credentials
# Make sure to enable both the Drive API and Gmail API

# Option 1: Using environment variables (recommended for CI/CD)
GOOGLE_PROJECT_ID=your_google_project_id_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Option 2: Using client_secrets.json file (recommended for local development)
# Place client_secrets.json in the credentials directory

# Email configuration
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient1@example.com,recipient2@example.com

STANDARD_RISK=1 # In Dollar
